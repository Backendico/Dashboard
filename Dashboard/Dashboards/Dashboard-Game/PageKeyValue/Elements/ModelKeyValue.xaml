             d:DesignHeight="112.142" d:DesignWidth="303">

    <Border x:Name="Root" BorderBrush="Gray" Opacity="1" BorderThickness="2" Margin="10" CornerRadius="5" Background="WhiteSmoke">
      

        <StackPanel>
        <!--Name-->
        <TextBlock Margin="10"><Run Text="Key: " FontWeight="Bold"/>
            <Run x:Name="TextName" Text="XXXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>
        </TextBlock>


            <!--Value-->
            <TextBlock Margin="10"><Run Text="Value: " FontWeight="Bold"/>
            <Run x:Name="TextValue" Text="XXX"/>
            </TextBlock>
        </StackPanel>

      
    </Border>

</UserControl>
