<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.Add_ons.TagsSystem.Elements.ModelTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Add_ons.TagsSystem.Elements"
             mc:Ignorable="d"
             Margin="10,2"
             Opacity="1"
             Cursor="Hand"
             >

    <StackPanel   Orientation="Horizontal" >
        <Border x:Name="Color1"  CornerRadius="5,0,0,5" Background="Tomato" >
            <TextBlock Margin="5" TextAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets"/>
        </Border>
        <Border x:Name="Color2" Margin="1,0"  CornerRadius="0,5,5,0" Background="Tomato" >
            <TextBlock x:Name="TextNameTag"  Margin="5,0" TextAlignment="Center" VerticalAlignment="Center"/>
        </Border>

    </StackPanel>
</UserControl>
