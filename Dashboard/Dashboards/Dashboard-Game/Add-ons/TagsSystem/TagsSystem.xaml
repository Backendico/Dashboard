<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.Add_ons.TagsSystem.TagsSystem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Add_ons.TagsSystem"
             
             mc:Ignorable="d"
             
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Root"  Background="#33000000">
        <Border x:Name="Content" CornerRadius="20"  MinWidth="400" VerticalAlignment="Center" Opacity="1" HorizontalAlignment="Center" Background="White">
            
            <!--Animation-->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded" >
                    <BeginStoryboard  >
                        <Storyboard Storyboard.TargetProperty="Opacity" Storyboard.TargetName="Root">
                            <DoubleAnimation From="0" To="1" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            
            <!--Shadow-->
            <Border.Effect>
                <DropShadowEffect Direction="0" Opacity="0.33" RenderingBias="Performance" ShadowDepth="0" BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Margin="10">
                <TextBlock Margin="0,10" Text="Tags :" FontWeight="Bold"/>
                <WrapPanel Margin="0,20"/>

                <Border Background="Gainsboro" BorderBrush="Gainsboro" BorderThickness="0.6"/>

                <!--Tag add-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                    <!--Color-->
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="20" Background="Black" Width="20" Height="20"/>

                        <!-- ColorsPallet-->
                        <StackPanel Visibility="Visible" Orientation="Horizontal" >
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                            <Border Margin="2,0" CornerRadius="20" Background="Black" Width="10" Height="10"/>
                        </StackPanel>

                    </StackPanel>

                    <TextBox Margin="10,0" MinWidth="200"/>

                    <!--BTNAdd-->
                    <Border CornerRadius="5" Background="Orange" Width="25" Height="25">
                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Foreground="White"  Text="&#xE948;" FontFamily="Segoe MDL2 Assets"/>
                    </Border>

                </StackPanel>


            </StackPanel>

        </Border>
    </Grid>
</UserControl>
