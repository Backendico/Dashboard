<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.Elements.Tooltips.ToolTipPrimary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.Tooltips"
             mc:Ignorable="d" 
             Cursor="Help"
             >
    
    <UserControl.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
    </UserControl.Resources>


    <Grid  HorizontalAlignment="Center" VerticalAlignment="Top"  >


        <TextBlock VerticalAlignment="Top"   TextAlignment="Center" HorizontalAlignment="Center"  >
                <Run  FontFamily="Segoe MDL2 Assets"  x:Name="BTNShowTooltip"  Text="&#xE946;" />
                <Run Name="TextTooltip" Text="ToolTisssssssssssp  "/>
        </TextBlock>




    </Grid>
</UserControl>
