             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.PagePlayer.Elements.ModelAchievements"
             mc:Ignorable="d" 
             d:DesignHeight="52.669" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <TextBlock Margin="10,0" VerticalAlignment="Center" >
                                        <Run Name="TextAchievement" Text="Name Achievement" /> <Run Text="( Value :" /> <Run x:Name="TextValue" Text="0" /> <Run Text=")" />
