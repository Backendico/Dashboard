<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.PagePlayer.Elements.ModelLeaderboardPlayerEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.PagePlayer.Elements"
              Background="WhiteSmoke" Height="45"
             mc:Ignorable="d" d:DesignWidth="930" >

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,2,2" Grid.Column="0"/>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,2" Grid.Column="1"/>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,2" Grid.Column="2"/>

        <ComboBox x:Name="ComboBoxName" IsEnabled="True" Margin="10" />

        <TextBox  x:Name="TextValue"  Height="25" Margin="5"  VerticalAlignment="Center" Text="Value" Grid.Column="1"/>

    </Grid>

</UserControl>
