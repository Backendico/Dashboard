<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.PagePlayer.Elements.ModelLog.ModelLogPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.PagePlayer.Elements.ModelLog"
             mc:Ignorable="d" 
             MinHeight="40"
             d:DesignHeight="50.821" d:DesignWidth="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border CornerRadius="5,0,0,0" BorderBrush="Gray" BorderThickness="0,0,2,2" Grid.Column="0"/>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,2" Grid.Column="1"/>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,2" Grid.Column="2"/>

        <TextBlock x:Name="TextHeader" TextAlignment="Center" VerticalAlignment="Center"  Text="Header" Grid.Column="0"/>
        <TextBlock Margin="6" x:Name="TextDescription" VerticalAlignment="Center"  TextWrapping="Wrap" Text="Description" Grid.Column="1"/>
        <TextBlock x:Name="TextTime" TextAlignment="Center" VerticalAlignment="Center"  Text="Time" Grid.Column="2"/>

    </Grid>

</UserControl>
