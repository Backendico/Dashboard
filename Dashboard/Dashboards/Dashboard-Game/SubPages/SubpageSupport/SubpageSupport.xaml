<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.SubPages.SubpageSupport.SubpageSupport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.SubPages.SubpageSupport"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Effect>
        <DropShadowEffect Direction="0" Opacity="0.33" RenderingBias="Performance" ShadowDepth="0" BlurRadius="100"/>
    </UserControl.Effect>


    <Grid   Background="Transparent">

        <Grid Focusable="True" Opacity="1"   Margin="10,50" x:Name="Root"  Width="300" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition/>
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity">
                            <DoubleAnimation From="0.0" To="1.0" Duration="0:0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>


            <!--Header-->
            <Grid  Grid.Row="0">
                <Rectangle   Height="20" Width="20" Fill="Orange"    RadiusX="3" RadiusY="4" Margin="145,-12,45,22"  >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="45"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Border  Background="Orange" CornerRadius="10,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock VerticalAlignment="Center" Margin="10,0" Foreground="White" FontWeight="Bold">
                        <Run Text="Support"/>
                        </TextBlock>
                        <TextBlock Cursor="Hand" Margin="10,0" Grid.Column="1" Background="Transparent" Foreground="White" Text="&#xE8BB;"  VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Right"  FontFamily="Segoe MDL2 Assets">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="MouseDown">
                                    <BeginStoryboard>
                                        <Storyboard  Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity">
                                            <DoubleAnimation  Completed="Close" From="1" To="0.0"  Duration="0:0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>

                    </Grid>

                </Border>

            </Grid>

            <!--Body-->
            <Grid  MaxHeight="400"  Grid.Row="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--PageQuestions-->
                <Grid x:Name="PageQuestions" Grid.Row="0">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
                </Grid>
                <!--Page EnterQuestions-->
                <Grid x:Name="PageEnterQuestions" Height="0" Grid.Row="1">
                    
                </Grid>
                <!--Page AddQuestions-->
                <Grid  x:Name="PageAddQuestions" Height="0"  Grid.Row="2">
                    <StackPanel Margin="10">
                        <!--Part-->
                        <StackPanel Margin="0,10" >
                            <TextBlock Text="Section :"/>
                            <ComboBox x:Name="ComboBoxPart" >
                                <ComboBoxItem Content="Other"/>
                                <ComboBoxItem  IsSelected="True" Content="Authentication"/>
                                <ComboBoxItem Content="Dashboard"/>
                                <ComboBoxItem Content="Payments"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!--Priority -->
                        <StackPanel Margin="0,10" >
                            <TextBlock Text="Priority"/>
                            <ComboBox Name="ComboBoxPriority">
                                <ComboBoxItem Content="High"/>
                                <ComboBoxItem Content="Normal"/>
                                <ComboBoxItem IsSelected="True" Content="Low"/>
                            </ComboBox>
                        </StackPanel>

                        <!--Title -->
                        <StackPanel Margin="0,10" >
                            <TextBlock Text="Title"/>
                            <TextBox x:Name="TextboxTitle" Height="30"/>
                        </StackPanel>
                        <Border x:Name="BTNAddSupport" Cursor="Hand" HorizontalAlignment="Right" Background="Orange" CornerRadius="5" Height="30" Width="80">
                            <TextBlock  Foreground="White" VerticalAlignment="Center" TextAlignment="Center" Text="Start"/>
                        </Border>

                    </StackPanel>
                </Grid>
            </Grid>

            <!--footer-->
            <Border  CornerRadius="0,0,10,10" Grid.Row="2"   Background="Orange" >
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock  x:Name="BTNReload" Foreground="White" ToolTip="Update" Cursor="Hand" Margin="0,0,20,0"  FontSize="15" Text="&#xE777;" FontFamily="Segoe MDL2 Assets"/>
                    <TextBlock  x:Name="BTNaddCategory" Foreground="White"  ToolTip="Add Questions" Cursor="Hand" Margin="0,0,20,0"  FontSize="15" Text="&#xE710;" FontFamily="Segoe MDL2 Assets">
                      <!--Animation openpageaddQuestion-->
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="MouseDown">
                                <BeginStoryboard>
                                    <Storyboard Storyboard.TargetName="PageAddQuestions" Storyboard.TargetProperty="Height">
                                        <DoubleAnimation From="0" To="250" Duration="0:0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>
