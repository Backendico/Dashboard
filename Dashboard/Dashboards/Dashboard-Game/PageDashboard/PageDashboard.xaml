<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.Elements.PageDashboard.PageDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.PageDashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Margin="10"
             BorderBrush="Gainsboro" Loaded="Start"
             
            
             >
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Collom1-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Players-->
            <Border CornerRadius="20,20,0,0" BorderBrush="Gray" BorderThickness="2"  Margin="20" Background="WhiteSmoke" Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--Header-->
                    <Border CornerRadius="20,20,0,0" BorderThickness="0,0,0,2" BorderBrush="Gray" Background="Gainsboro" >
                        <TextBlock Text="Players" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Bold"/>
                    </Border>
                    <StackPanel Grid.Row="1" >

                        <!--24-->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="24 hours : "/>
                            <TextBlock x:Name="TextPlayer_24Hours"  Text=" X X X"/>
                        </StackPanel>

                        <!--1 Day-->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="1 Day : "/>
                            <TextBlock  x:Name="TextPlayer_1Day"   Text=" X X X"/>
                        </StackPanel>

                        <!--7 Day-->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="7 Day : "/>
                            <TextBlock  x:Name="TextPlayer_7Day"  Text=" X X X"/>
                        </StackPanel>
                        <!--30 Day-->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="30 Day : "/>
                            <TextBlock  x:Name="TextPlayer_30Day"  Text=" X X X"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>

            </Border>

            <!--Logins-->
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="20,20,0,0" Margin="20" Background="WhiteSmoke" Grid.Row="1">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--Header-->
                    <Border BorderThickness="0,0,0,2" BorderBrush="Gray" CornerRadius="20,20,0,0" Background="Gainsboro">
                        <TextBlock Text="Logins" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>
                    </Border>
                    <!--Body-->
                    <StackPanel Grid.Row="1" >


                        <!--24-->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="24 hours : "/>
                            <TextBlock   x:Name="TextLogin_24hours"   Text=" X X X"/>
                        </StackPanel>

                        <!--1 Day-->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="1 Day : "/>
                            <TextBlock  x:Name="TextLogin_1Day"  Text=" X X X"/>
                        </StackPanel>

                        <!--7 Day-->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="7 Day : "/>
                            <TextBlock  x:Name="TextLogin_7Day"   Text=" X X X"/>
                        </StackPanel>
                        <!--30 Day-->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                            <TextBlock FontWeight="Bold" Text="30 Day : "/>
                            <TextBlock  x:Name="TextLogin_30Day"   Text=" X X X"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>

            </Border>
        </Grid>

        <!--Collom2-->
        <Border Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="2" CornerRadius="20,20,0,0"  Margin="20" Grid.Column="1">
        <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Background="Gainsboro" BorderBrush="Gray" CornerRadius="20,20,0,0"  BorderThickness="0,0,0,2">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Text="Counts"/>
                </Border>
            
            <StackPanel Grid.Row="1" Background="WhiteSmoke">

               
                <!--Leaderboards-->
                <StackPanel  Orientation="Horizontal" Margin="5">
                    <TextBlock FontWeight="Bold" Text="Leaderboards :"/>
                    <TextBlock x:Name="TextCount_Leaderboards" Text="XXXX "/>
                </StackPanel>

                <!--Players-->
                <StackPanel  Orientation="Horizontal" Margin="5">
                    <TextBlock FontWeight="Bold" Text="Players :"/>
                    <TextBlock x:Name="TextCount_Players" Text="XXXX "/>
                </StackPanel>


            </StackPanel>
        </Grid>
            
        </Border>

    </Grid>

</UserControl>
