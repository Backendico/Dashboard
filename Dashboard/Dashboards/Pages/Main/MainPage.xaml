<UserControl x:Class="Dashboard.Dashboards.Pages.Main.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Pages.Main"
             xmlns:IconOpen="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.Tooltips"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400" Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Navigation-->
        <Grid Background="#0f62fe">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--header-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <!--BTNNavigation-->
                <TextBlock Text="&#xE700;" Cursor="Hand" FontSize="20" Foreground="White" Grid.Column="2" TextAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets"/>

                <!--Logo-->
                <!--Text-->
                <TextBlock Grid.Column="1" Text="Backendi" FontSize="15" FontWeight="Bold" TextAlignment="Left" VerticalAlignment="Center" Foreground="White"/>

                <!--Icon-->
                <Image Width="25" Height="25" Source="/Dashboard;component/Icon.ico" />


            </Grid>

            <!--Menu-->
            <StackPanel Margin="22,0" Grid.Row="1">
                <TextBlock Margin="0,32,0,20" FontSize="11" Foreground="#d0e2ff"  Text="DASHBOARD"/>

                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="5" Background="White">

                    </Border>

                    <TextBlock Text="Home" VerticalAlignment="Center" Foreground="#d0e2ff"  Margin="10,0" TextAlignment="Left" Grid.Column="1"/>

                </Grid>

            </StackPanel>

        </Grid>

        <!--Content-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid Background="White">

            </Grid>

        </Grid>

    </Grid>
</UserControl>
