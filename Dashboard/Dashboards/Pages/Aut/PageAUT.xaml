<Window x:Class="Dashboard.Dashboards.Pages.Aut.PageAUT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dashboard.Dashboards.Pages.Aut"
        xmlns:Buttons="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.BTNs"
       xmlns:Link="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.Links"
        xmlns:Input="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.TextInputs"
        mc:Ignorable="d"
        Title="PageAUT" Height="450" Width="800">
    <Grid>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">

            <Input:TextInputPrimary InputMode="Email"  PlaceHolder="Email"   Margin="0,10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Input:TextInputPassword  PlaceHolder="Pass" Text="Handel" Margin="0,10" HorizontalAlignment="Center"/>
            <Link:LinksPrimary TextLinks="Forget Password?" HorizontalAlignment="Right"/>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Buttons:SecondaryButton TextButton="Register"/>
                <Buttons:BTNPrimary  Margin="0,20" TextButton="Login" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
