<UserControl x:Class="Dashboard.Dashboards.Dashboard_Game.PageAUT.Recovery.PageAccountRecovery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.Dashboards.Dashboard_Game.PageAUT.Recovery"
              xmlns:Input="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.TextInputs"
             xmlns:Buttons="clr-namespace:Dashboard.Dashboards.Dashboard_Game.Elements.BTNs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="PanelRecovery" Opacity="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">

        <Input:TextInputPrimary InputMode="Email"  PlaceHolder="Email"   Margin="0,10" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Buttons:SecondaryButton x:Name="BTNLogin" TextButton="Login"/>
            <Buttons:BTNPrimary  x:Name="BTNRecovery"  Margin="0,20" TextButton="Recovery" />
        </StackPanel>
    </StackPanel>

</UserControl>
